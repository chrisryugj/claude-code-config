{
  "permissions": {
    "allow": [
      "Bash(git pull:*)",
      "Bash(git push:*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "bypassPermissions"
  },
  "model": "opusplan",
  "statusLine": {
    "type": "command",
    "command": "py ~/.claude/statusline.py",
    "padding": 0
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": true
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run lint -- --fix 2>nul || exit 0"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell -Command \"Add-Type -AssemblyName System.Windows.Forms; [System.Windows.Forms.MessageBox]::Show('Claude 작업 완료!', 'Claude Code', 'OK', 'Information')\""
          }
        ]
      }
    ]
  }
}
